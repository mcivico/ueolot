<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
            android:id="@+id/box_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/post_border_background"
            android:orientation="vertical" >


        <LinearLayout
                android:id="@+id/single_post_circuito_linearbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="5dp" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="21"
                        android:id="@+id/txtPosicio"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/colorNegre"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Aaaa"
                        android:id="@+id/txtEquip"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/colorNegre"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="40"
                        android:id="@+id/txtPartitsJugats"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/colorNegre"
                        android:textSize="12dp"
                        android:layout_weight="0.05"
                        android:textStyle="bold" />

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="90"
                    android:id="@+id/txtPunts"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/colorNegre"
                    android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>