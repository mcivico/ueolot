<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6CECE"
    tools:context=".Fragments.Fragment_Llista_Noticia">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6CECE"
        tools:context=".Fragments.Fragment_Llista_Noticia">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <!--TextView
                android:id="@+id/ueo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colortTítols"
                android:textSize="35sp"
                android:textStyle="bold" /-->

            <LinearLayout
                android:id="@+id/UltimaPuntuacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/webViewTeam1"
                        android:background="#E6CECE"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1.25"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/txtRes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textSize="35sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colortTítols"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/webViewTeam2"
                        android:background="#E6CECE"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1.25"
                        android:scrollbars="none" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="10dp">
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listViewNoticia"
                    android:layout_gravity="center" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</FrameLayout>